check process blacksmith
  with pidfile /var/vcap/sys/run/blacksmith/blacksmith.pid
  start program "/var/vcap/jobs/blacksmith/bin/monit_debugger blacksmith_ctl '/var/vcap/jobs/blacksmith/bin/ctl start'"
  stop program "/var/vcap/jobs/blacksmith/bin/monit_debugger blacksmith_ctl '/var/vcap/jobs/blacksmith/bin/ctl stop'"
  group vcap
